{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block monTitre %} {{ post.title }} {% endblock %}

{% block body %}

    <div class="jumbotron">
        <div class="card">
            <h2 class="card-header">{{post.title}}</h2>
            <div class="card-body">
                <p >post√© le: {{post.date|date('d/m/Y H:i:s')}}</p>
                <hr class="my-1">
            </div>
            <div class="row m-5">
                <div class="col-xl-6 col-md-5 col-sm-12 justify-content-center">
                    <img class="mx-auto d-block " src="{{asset('images/' ~ post.img)}}" alt="image article">
                </div>
                <div class="col-xl-6 col-md-7 col-sm-12 justify-content-center">
                    <p class="mt-4">{{post.content}}</p>
                </div>
            </div>
        </div>
    </div>

{% endblock %}