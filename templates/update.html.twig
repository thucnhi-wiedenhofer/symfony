{% extends 'base.html.twig' %}

{% block title %} {% endblock %}

{% block monTitre %} Modifier un article {% endblock %}

{% block body %}
    {{ form_start(form)}}
    <div class="jumbotron">
        <div class="row d-flex justify-content-center">
            <div class="col-6">
                <img src="{{asset('images/' ~ post.img)}}" alt="{{ post.title }}" style="width:25%">
                <div>{{ form_row(form.title)}}</div>
                <div>{{form_row(form.content)}}</div>            
           
                {{ form_widget(form)}}
            
                <input type="submit" class="btn btn-primary mt-3" value="Modifier">
            </div>
        </div>
    </div>
    {{ form_end(form)}}
{% endblock %}
