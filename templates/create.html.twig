{% block body %}
    {{ form_start(form)}}
<div class="jumbotron">
    <div class="row d-flex justify-content-center">
        <div class="col-6">            
            <div>{{ form_row(form.title)}}</div>
            <div>{{ form_row(form.imageFile) }}</div>
            <div>{{form_row(form.content)}}</div>
                
